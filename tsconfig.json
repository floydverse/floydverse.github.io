{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"outDir": "./dist",
		"checkJs": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./*.js"
	],
	"exclude": [
		"node_modules",
		"./standalone.js"
	]
}
